@model RankAmount

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Επεξεργασία Βαθμού/Επιδόματος</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <input type="hidden" asp-for="RankAmountId" />
                <div class="form-floating py-2 col-12">
                    <input asp-for="Rank" class="form-control border-0 shadow" />
                    <label asp-for="Rank" class="ms-2"></label>
                    <span asp-validation-for="Rank" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="Duty" class="form-control border-0 shadow">
                        <option value="-" selected>-</option>
                        <option value="Κυβερνήτης">Κυβερνήτης</option>
                        <option value="Υ/Αος">Υ/Αος</option>
                    </select>
                    <label asp-for="Duty" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="BaseAmount" class="form-control border-0 shadow" />
                    <label asp-for="BaseAmount" class="ms-2"></label>
                    <span asp-validation-for="BaseAmount" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-4">
                        <button type="submit" class="btn btn-primary form-control">Αποθήκευση</button>
                    </div>
                    <div class="col-6 col-md-4">
                        <a asp-controller="RankAmount" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Επιστροφή
                        </a>
                    </div>
                </div>
            </div>


        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}