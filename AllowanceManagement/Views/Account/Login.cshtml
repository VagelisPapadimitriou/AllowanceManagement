@model AllowanceManagement.Models.Account

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Login</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-action="Login" class="row">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Username" class="form-control border-0 shadow" placeholder="Username" />
                    <label asp-for="Username" class="ms-2">Username</label>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Password" class="form-control border-0 shadow" type="password" id="passwordInput" placeholder="Password" />
                    <label asp-for="Password" class="ms-2">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-check py-2 col-12">
                    <input type="checkbox" class="form-check-input" id="showPasswordCheck" onclick="togglePassword()">
                    <label class="form-check-label" for="showPasswordCheck">Show Password</label>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-4">
                        <button type="submit" class="btn btn-primary form-control">Login</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword() {
            var passwordInput = document.getElementById("passwordInput");
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
            } else {
                passwordInput.type = "password";
            }
        }
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
