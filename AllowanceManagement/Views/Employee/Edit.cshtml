@model Employee

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Επεξεργασία Στοιχείων</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="None"></div> @*If custom validation message needed inside Create Method use: All or ModelOnly*@
                <div class="form-floating py-2 col-12">
                    <input type="hidden" asp-for="AM" />
                    <input asp-for="AM" disabled class="form-control border-0 shadow" />
                    <label asp-for="AM" class="ms-2"></label>
                    <span asp-validation-for="AM" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                   GIA TO RANK
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="FirstName" class="form-control border-0 shadow" />
                    <label asp-for="FirstName" class="ms-2"></label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div><div class="form-floating py-2 col-12">
                    <input asp-for="LastName" class="form-control border-0 shadow" />
                    <label asp-for="LastName" class="ms-2"></label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                    <div class="form-floating py-2 col-12">
                        <input class="form-control border-0 shadow" />
                        <label class="ms-2">ΚΕΝΟ</label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input class="form-control border-0 shadow" />
                        <label class="ms-2">ΚΕΝΟ</label>
                    </div>

                    <div class="row pt-2">
                        <div class="col-6 col-md-4">
                            <button type="submit" class="btn btn-primary form-control">Αποθήκευση</button>
                        </div>
                        <div class="col-6 col-md-4">
                            <a asp-controller="Employee" asp-action="Delete" asp-route-id="@Model.AM" class="btn btn-outline-danger border form-control">
                                Διαγραφή
                            </a>
                        </div>
                        <div class="col-6 col-md-4">
                            <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-success border form-control">
                                Επιστροφή
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}