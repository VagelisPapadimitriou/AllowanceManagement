@model List<Employee>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Προσωπικό</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="d-flex justify-content-between pb-3">
                <div>
                    <a asp-controller="UploadedFile" asp-action="Index" class="btn btn-outline-success">
                        <i class="bi bi-plus-square"></i> Διαχείρηση Αρχείων
                    </a>
                </div>
                <div>
                    <a asp-controller="Employee" asp-action="Create" class="btn btn-info">
                        <i class="bi bi-plus-square"></i> Προσθήκη Προσωπικού
                    </a>
                </div>
            </div>
        }

        <table class="table table-bordered table-striped text-center" style="vertical-align: middle;">
            <thead>
                <tr>
                    <th style="width: 5%;">Α/Α</th>
                    <th style="width: 10%;">ΑΜ</th>
                    <th style="width: 10%;">Βαθμός</th>
                    <th style="width: 15%;">Επώνυμο</th>
                    <th style="width: 15%;">Όνομα</th>
                    <th style="width: 10%;">Πλεύσιμες</th>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <th style="width: 30%;">Επιλογές </th>
                    }
                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 1;
                }
                @foreach (var emp in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@emp.AM</td>
                        <td>@emp.RankAmount.Rank</td>
                        <td>@emp.LastName</td>
                        <td>@emp.FirstName</td>
                        <td>@emp.SeaDay</td>
                            <td>
                                <div class=" btn-group" role="group">
                                <a href="#" class="btn btn-outline-warning mx-2" data-bs-toggle="modal" data-bs-target="#employeeDetailsModal"
                                   onclick="loadEmployeeDetails('@emp.AM')">
                                    <i class="bi bi-info-circle"></i> Λεπτομέρειες
                                </a>
                        @if (User.Identity.IsAuthenticated)
                        {
                                    @* <form asp-controller="Employee" asp-action="AddSeaDay" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@emp.AM" />
                                        <button type="submit" class="btn btn-success mx-2">
                                            <i class="bi bi-water"></i> + 1
                                        </button>
                                    </form>
                                    <form asp-controller="Employee" asp-action="RemoveSeaDay" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@emp.AM" />
                                        <button type="submit" class="btn btn-warning mx-2">
                                            <i class="bi bi-water"></i> - 1
                                        </button>
                                    </form> *@
                                    
                                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@emp.AM" class="btn btn-outline-primary mx-2">
                                        <i class="bi bi-pencil"></i> Επεξεργασία
                                    </a>
                        }
                                </div>
                            </td>
                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="employeeDetailsModal" tabindex="-1" aria-labelledby="employeeDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h2 class="modal-title w-100" id="employeeDetailsModalLabel">Λεπτομέρειες Προσωπικού</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Employee details will be loaded here dynamically -->
                <div id="modalContent">
                    <!-- Placeholder content while loading -->
                    <div class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Κλείσιμο</button>
            </div>
        </div>
    </div>
</div>

<script>
    function loadEmployeeDetails(employeeId) {
        $.ajax({
            url: '@Url.Action("Details", "Employee")', // Adjust the action name and controller if different
            type: 'GET',
            data: { id: employeeId },
            success: function (data) {
                $('#modalContent').html(data); // Load the returned partial view into the modal
            },
            error: function () {
                $('#modalContent').html('<div class="alert alert-danger" role="alert">Failed to load details.</div>');
            }
        });
    }
</script>
