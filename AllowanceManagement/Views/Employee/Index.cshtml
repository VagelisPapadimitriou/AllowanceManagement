@model List<Employee>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Προσωπικό</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-square"></i> Προσθήκη Προσωπικού
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Αριθμός Μητρώου</th>
                    <th>Βαθμός</th>
                    <th>Όνομα</th>
                    <th>Επώνυμο</th>
                    <th>Κατηγορία</th>
                    <th>Ποσό</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr>
                        <td>@emp.AM</td>
                        <td>keno</td>
                        <td>@emp.FirstName</td>
                        <td>@emp.LastName</td>
                        <td>keno</td>
                        <td>keno</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Employee" asp-action="Edit" asp-route-id="@emp.AM" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil"></i> Τροποποίηση
                                </a>
                                <a asp-controller="Employee" asp-action="Delete" asp-route-id="@emp.AM" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3"></i> Διαγραφή
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
